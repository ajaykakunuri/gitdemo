package ajayintro;

import java.util.Scanner;

public class Switchcase {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("input1");
		System.out.println("input2:");
		int n1=sc.nextInt();
		int n2=sc.nextInt();
		int n3;
		int n=sc.nextInt();
		switch(n)
		{
		case 1:
			n3=n1+n2;
			System.out.println(n3);
			break;
		case 2:
			n3=n1-n2;
			System.out.println(n3);
			break;
			
			
			
		}
		
		

	}

}
